name: Deploy to Heroku

on:
  push:
    branches:
      - main  # Tự động triển khai khi có commit lên nhánh main
  pull_request:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Set up Python
        uses: actions/setup-python@v2
        with:
          python-version: '3.11.9'  # Đặt phiên bản Python phù hợp

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      - name: Deploy to Heroku
        env:
          HEROKU_API_KEY: ${{ secrets.HEROKU_API_KEY }}  # Lấy API key từ git secrets
        run: |
          heroku git:remote -a nhan-dien-dai-bieu
          git push heroku main
